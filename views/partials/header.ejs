<%var cPage;%>
<% var username; %>
<header>
    <nav class=" <%=username !== undefined? 'usernavauth':'signinupnav'%>">
        <% if(username !== undefined) {%>
            <nav>
                <a class="userIcon" href="/u"></a>
                <span><a class="header-username" href="/u/<%= username %>"><%= username %></a></span>
            </nav>
            <nav>
            <form action="/signout?_method=DELETE" method="POST">
                <button class="btn-so" type="submit">Sign Out</button>
            </form>
            </nav>
        <% } else { %>
            <ul class="signinupnav-ul">
                <li class="<%=cPage==='signin'? 'current-page':''%>"><a href="/signin">Sign In</a></li>
                <li class="<%=cPage==='signup'? 'current-page':''%>"><a href="/signup">Sign Up</a></li>
                <li class="<%=cPage==='u'? 'current-page':''%>"><a href="/u">Users</a></li>
            </ul>
        <% } %>
    </nav>
    <nav class="header-title">
        <h1> <a href="/">Danidre</a></h1>
    </nav>
    <nav>
        <ul class="header-ul">
            <li class="home-btn <%=cPage=='home'? 'current-page':''%>"><a href="/">Home</a></li>
            <li class="games-btn"><a href="https://danidre14.newgrounds.com/games" target="_blank">Games</a></li>
            <li class="<%=cPage==='about'? 'current-page':''%>"><a href="/about">About</a></li>
            <li class="<%=cPage==='news'? 'current-page':''%>"><a href="/news">News</a></li>
            <li class="<%=cPage==='contact'? 'current-page':''%>"><a href="/contact">Contact</a></li>
        </ul>
    </nav>
</header>