<h2>Posts</h2>
<section>
    <article>
        <div class="div-space-between">
            <a class="btn btn-primary lock" href="/posts">Cancel</a>
            <button class="btn btn-primary" onclick="attemptSendingPost()">Publish</button>
        </div>
        <button class="btn btn-primary" onclick="previewThePost()">Preview</button>
        <button class="btn btn-primary" onclick="editThePost()">Edit</button>
        <div id="Edits">
            <input class="input fcn" id="title" type="text" autocomplete="off" placeholder="title">
            <textarea class="textarea fcn" name="content" id="content" rows="15" autocomplete="off"
                placeholder="Post Content"></textarea>
            <textarea class="textarea fcn" name="content" id="summary" rows="3" autocomplete="off"
                placeholder="Summary"></textarea>

            <div style="display:grid;grid-template-columns: 50% 30% auto;">
                <input class="input fcn" id="image" type="text" autocomplete="off" placeholder="image src">
                <input class="input fcn" id="name" type="text" autocomplete="off" placeholder="url name">
                <input class="input fcn" id="code" type="text" autocomplete="off" placeholder="post's code">
            </div>
        </div>
        <div class="the_markdown" id="Previews" style="display:none;"></div>
    </article>
</section>
<meta name="robots" content="none" />

<script defer src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script defer src="/javascripts/createPost.js"></script>
<script defer src="/javascripts/validatePost.js"></script>
<script defer src="/utility/MarkDownToUp.js"></script>
<script defer src="/javascripts/editPreviewPost.js"></script>