<h2>Verify Account</h2>
<section class="signup-verify">
    <article>
        <form class="signings" action="/signup/verify" method="POST">
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" autocomplete="off" required>
            </div>
            <div>
                <input class="token-box" type="text" id="token" name="token" autocomplete="off" value="<%= searchOptions.token %>" hidden>
            </div>
            <button class="btn btn-primary" type="submit">Verify</button>
        </form>
    </article>
    <article>
        <p> Don't have an account? <a href="/signup">Sign Up</a></p>
    </article>
</section>
<meta name="description" content="Verify your Danidre account.">
